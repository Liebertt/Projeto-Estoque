<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque de Produtos</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Estoque de Produtos</h1>
    <a href="/add">Adicionar Produto</a>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.id %></td>
                    <td><%= product.name %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.price %></td>
                    <td>
                        <a href="/edit/<%= product.id %>">Editar</a>
                        <a href="/delete/<%= product.id %>">Deletar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>